FROM ubuntu:22.04

# Set non-interactive mode to avoid MySQL timezone prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install required packages
RUN apt-get update && apt-get install -y \
    gnupg curl software-properties-common

# Add MongoDB repo
RUN curl -fsSL https://pgp.mongodb.com/server-7.0.asc | gpg --dearmor -o /usr/share/keyrings/mongodb-server-7.0.gpg && \
    echo "deb [signed-by=/usr/share/keyrings/mongodb-server-7.0.gpg] https://repo.mongodb.org/apt/ubuntu jammy/mongodb-org/7.0 multiverse" \
    | tee /etc/apt/sources.list.d/mongodb-org-7.0.list

# Install packages
RUN apt-get update && apt-get install -y \
    mongodb-org \
    mysql-server \
    openjdk-21-jdk-headless

# Copy init scripts and application files
COPY init.sql /docker-entrypoint-initdb.d/
COPY app.jar /app/app.jar
COPY start.sh /app/start.sh
RUN chmod +x /app/start.sh

# Initialize MySQL properly
RUN mkdir -p /var/run/mysqld && \
    chown -R mysql:mysql /var/run/mysqld && \
    chown -R mysql:mysql /var/lib/mysql

# Expose ports
EXPOSE 8080 3306 27017

WORKDIR /app
CMD ["./start.sh"]